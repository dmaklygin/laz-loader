.input
  display block

.input__element
  display inline-block
  vertical-align: top

  height: $inputHeight
  padding: 0 0 0 7px
  line-height: $inputHeight
  min-height: $inputHeight
  font-size: $inputFontSize

  box-shadow: none
  border: 1px solid rgba(0,0,0,0.16)
  outline: none

  &::-webkit-input-placeholder
    color: @greyColor
  &:-moz-placeholder
    color: @greyColor
  &::-moz-placeholder
    color: @greyColor
  &:-ms-input-placeholder
    color: @greyColor

  &:focus
    box-shadow 0 0 6px 2px rgba(246,245,243,0.7)

.input__label
  display inline-block
  vertical-align: top
  margin 0 10px 0 0

  line-height: $inputHeight
  font-size: $inputFontSize